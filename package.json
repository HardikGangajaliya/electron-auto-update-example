{
  "name": "electron-auto-update-example",
  "version": "1.1.2",
  "description": "this is just for testing",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HardikGangajaliya/electron-auto-update-example"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "4",
    "electron-builder": "^22.1.0"
  },
  "dependencies": {
    "electron-updater": "^4.0.6",
    "electron-push-receiver": "^2.1.3",
    "electron-windows-badge": "^1.1.0"
  },
  "build": {
    "productName": "UBS Chat",
    "appId": "org.chat.ubs",
    "files": [],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "HardikGangajaliya",
      "repo": "electron-auto-update-example",
      "private": true
    }
  }
}
